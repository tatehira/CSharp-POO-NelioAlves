internal class Program
{
    private static void Main(string[] args)
    {
        string PrimeiroNome, SegundoNome;
        int PrimeiraIdade, SegundaIdade;

        string[] NomeMedia;
        NomeMedia = Console.ReadLine().Split(' ');

        PrimeiroNome = NomeMedia[0];
        PrimeiraIdade = int.Parse(NomeMedia[1]);
        SegundoNome = NomeMedia[2];
        SegundaIdade = int.Parse(NomeMedia[3]);

        double Media = (PrimeiraIdade + SegundaIdade) / 2;

        Console.WriteLine("A idade de " + PrimeiroNome + " é " + PrimeiraIdade + 
                        ". A Idade de " + SegundoNome + " é: " + SegundaIdade);

        Console.WriteLine("A média da idade de " + PrimeiroNome + " e " + SegundoNome + " é: " + Media);

    }
}